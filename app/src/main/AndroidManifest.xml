<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.porodem.porod.icooked"
    >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:logo="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.porodem.porod.icooked.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.porodem.porod.icooked.RandomDish"
            android:logo="@drawable/logo_ico"
            android:label="@string/title_activity_random_dish"
            android:parentActivityName="com.porodem.porod.icooked.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.porodem.porod.icooked.MainActivity" />
        </activity>
        <activity
            android:name="com.porodem.porod.icooked.CheckIngredients"
            android:logo="@drawable/logo_ico"
            android:label="@string/title_activity_check_ingredients"
            android:parentActivityName="com.porodem.porod.icooked.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.porodem.porod.icooked.MainActivity" />
        </activity>
        <activity
            android:name="com.porodem.porod.icooked.ShowDish"
            android:logo="@drawable/logo_ico"
            android:label="@string/title_activity_show_dish"
            android:parentActivityName="com.porodem.porod.icooked.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.porodem.porod.icooked.MainActivity" />
        </activity>
        <activity
            android:name="com.porodem.porod.icooked.Favorite"
            android:logo="@drawable/logo_ico"
            android:label="@string/title_activity_favorite"
            android:parentActivityName="com.porodem.porod.icooked.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.porodem.porod.icooked.MainActivity" />
        </activity>
    </application>

</manifest>
