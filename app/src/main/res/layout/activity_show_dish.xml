<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.porodem.porod.icooked.ShowDish">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_show_title"
                android:text="Название рецепта" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/tv_show_time"
                android:text="Время готовки" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/iv_show_Dish"
                android:layout_width="match_parent"
                android:layout_height="200sp" />

            <TextView
                android:id="@+id/tv_show_pecipe"
                android:text="Рецепт" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
